@model IEnumerable<GetApp.Data.Models.Subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subjects</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="subjectsDataTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SubjectId })
                    @Html.ActionLink("Delete", "Delete", new { id = item.SubjectId })
                </td>
            </tr>

        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#subjectsDataTable').DataTable();
    });
</script>

